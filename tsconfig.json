{
    "compilerOptions": {
        "module": "es6",
        "target": "es2017",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "lib": [
            "dom",
            "es6",
            "es7"
        ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "moduleResolution": "node",
        "paths": {}
    },
    "include": [
        "./src/**/*",
        "./webpack/**/*"
    ],
    "exclude": [
        "node_modules",
        "typings/globals"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useCache": true,
        "transpileOnly": true,
        "forceIsolatedModules": true
    }
}
